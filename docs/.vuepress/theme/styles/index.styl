.theme-default-content pre,
.theme-default-content pre[class*="language-"]
  max-height: 350px

div[class*="language-"]::before
  right: 2em

code
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", "PingFang SC", "Microsoft Yahei", monospace

.nova-button,
.nova-alert,
.nova-select,
.nova-date-picker
  margin-bottom: 5px

.nova-date-picker-range-start
  margin-bottom: 2px

.nova-alert-block
  margin-bottom: 10px

.nova-auto-complete-dropdown
  .nova-alert
    margin-bottom: 0

.nova-modal-mask,
.nova-modal-wrap
  z-index: 20

.nova-modal
  p
    margin: 0;

.nova-dropdown
  z-index: 1

.pic-plus
  display: flex;
  flex-wrap: wrap;
  align-items: center;

.pic-plus-icon
  font-size: 0
  display: block;
  position: relative;
  color: #aaaaaa;
  margin: 0 0 0 15px;
  width: 16px;
  height: 2px;
  background-color: #aaaaaa;

.pic-plus-icon:before
  display: block;
  content: '';
  background-color: #aaaaaa;
  position: absolute;
  left: 50%;
  top: 50%;
  width: 2px;
  height: 16px;
  transform: translate(-50%, -50%);

